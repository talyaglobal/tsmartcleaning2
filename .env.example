# ============================================
# Required Environment Variables
# ============================================

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# Optional Environment Variables
# ============================================

# Application Base URL
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CONNECT_CLIENT_ID=ca_your_connect_client_id

# Stripe Usage Metering (optional)
STRIPE_METER_BOOKING_ITEM=si_your_booking_item_id
STRIPE_METER_MESSAGE_ITEM=si_your_message_item_id

# Email Service Configuration
EMAIL_SERVICE_API_KEY=your-email-api-key
EMAIL_FROM=noreply@your-domain.com

# Root Admin Configuration
ROOT_ADMIN_OTP_SECRET=your-secret-otp-key

# WhatsApp Integration (optional)
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER=+1234567890
NEXT_PUBLIC_WHATSAPP_NUMBER=+1234567890

# Sentry Configuration (for error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=talyaglobal
SENTRY_PROJECT=javascript-nextjs

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Vercel Configuration (auto-set by Vercel)
VERCEL_URL=your-vercel-url
NEXT_PUBLIC_VERCEL_URL=your-vercel-url

# Multi-tenant Configuration (optional)
ENABLE_MULTI_TENANT=true

# Node Environment
NODE_ENV=production
